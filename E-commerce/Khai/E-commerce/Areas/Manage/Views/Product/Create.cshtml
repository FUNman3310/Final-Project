@model Product


<div class="content">
	<h3>Product</h3>
	<div class="content-data">
		<div class="content-form">
			<form method="post" enctype="multipart/form-data">


                <div class="form-inline">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input class="form-control" asp-for="Name" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Code" class="form-label">Code</label>
                        <input class="form-control" asp-for="Code" placeholder="Code">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-inline">
                    <div class="form-group">
                        <label asp-for="SalePrice" class="form-label">SalePrice</label>
                        <input class="form-control" asp-for="SalePrice" placeholder="SalePrice">
                        <span asp-validation-for="SalePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostPrice" class="form-label">CostPrice</label>
                        <input class="form-control" asp-for="CostPrice" placeholder="CostPrice">
                        <span asp-validation-for="CostPrice" class="text-danger"></span>
                    </div>
                </div>


                <div class="row align-items-center">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea style="width:500px; height:100px" class="form-control" asp-for="Description" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="ShortDescription" class="form-label">ShortDescription</label>
                        <textarea style="width:500px; height:100px" class="form-control" asp-for="ShortDescription" placeholder="ShortDescription"></textarea>
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>

                   

                    <div class="form-inline">
                        <div class="form-group" style="padding-bottom:20px">
                            <label asp-for="Discount" class="form-label">Discount</label>
                            <input class="form-control" asp-for="Discount" placeholder="Discount">
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-bottom:20px">
                            <label asp-for="Count" class="form-label">Count</label>
                            <input class="form-control" asp-for="Count" placeholder="Count">
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>   
                    </div>


                    <div class="form-inline">    
                        <div class="mb-3 col-md-2" style="padding-bottom:20px">
                            <input class="form-check-input" asp-for="IsAvailable">
                            <label class="form-check-label" asp-for="IsAvailable">
                                IsAvailable
                            </label>
                        </div>
                        <div class="mb-3 col-md-2" style="padding-bottom:20px">
                            <input class="form-check-input" asp-for="IsRecommend">
                            <label class="form-check-label" asp-for="IsRecommend">
                                IsRecommend
                            </label>
                        </div>
                        <div class="mb-3 col-md-2" style="padding-right:7px">
                            <input class="form-check-input" asp-for="IsTranding">
                            <label class="form-check-label" asp-for="IsTranding">
                                IsTranding
                            </label>
                        </div>
                    </div>




                    <div class="form-inline">
                        <div class="mb-3 col-md-2">
                            <label asp-for="ColorId" class="form-label">Colors</label>
                            <select class="form-select" asp-for="ColorId" asp-items="@(new SelectList(ViewBag.Color,"Id","Name"))">
                            </select>
                        </div>
                        <div class="mb-3 col-md-2">
                            <label asp-for="MaterialId" class="form-label">Materials</label>
                            <select class="form-select" asp-for="MaterialId" asp-items="@(new SelectList(ViewBag.Material,"Id","Name"))">
                            </select>
                        </div>
                        <div class="mb-3 col-md-2">
                            <label asp-for="ProductTypeId" class="form-label">Types</label>
                            <select class="form-select" asp-for="ProductTypeId" asp-items="@(new SelectList(ViewBag.Type,"Id","Name"))">
                            </select>
                        </div>
                        <div class="mb-3 col-md-2">
                            <label asp-for="CategoryId" class="form-label">Categories</label>
                            <select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Category,"Id","Name"))">
                            </select>
                        </div>
                    </div>
                    
                    

                </div>




                <div class="form-inline">
                    <div style="margin-bottom:20px;padding-top:20px" class="col-md-4">
                        <label asp-for="PosterImageFile" class="form-label">PosterImageFile</label>
                                    <input class="form-control" asp-for="PosterImageFile" placeholder="Images">
                                       <span asp-validation-for="PosterImageFile" class="text-danger"></span>
                    </div>
                               
                    <div style="margin-bottom:20px;padding-top:20px" class="col-md-4">
                        <label asp-for="ImageFiles" class="form-label">ImageFiles</label>
                        <input class="form-control" asp-for="ImageFiles" placeholder="Images">
                        <span asp-validation-for="ImageFiles" class="text-danger"></span>
                    </div>
                </div>





				<div style="display:flex; justify-content:center; align-items:center">
					<button type="submit" class="button button2">Create</button>

				</div>
			</form>



		</div>

	</div>
</div>
