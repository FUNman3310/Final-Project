@using E_commerce.Helper;
@model PaginatedList<Order>

<main>

	<div class="main-content">
		
		<div class="content dashboard">
			<h3>Dashboard</h3>
			<div class="content-data">
				
				<div class="content-detail">
					<h4>Recent Order</h4>
					<table>
						<thead>
							<tr>
								<th>Date</th>
								<th>UserEmail</th>
								<th>User</th>
								<th>Amount</th>
								
							</tr>
						</thead>
						<tbody>
								@foreach (Order item in Model)
								{
							<tr>
								    <td>@item.CreateTime</td>
									<td>@item.Email</td>
									<td>@item.AppUserId</td>
								   <td>@item.TotalCost</td>
							</tr>
								}
								
						</tbody>
					</table>
				</div>
				
			</div>
		<div>
		<form method="get">
			<nav aria-label="Page navigation example">
				<ul class="pagination">

						@if (Model.HasPrevious)
						{
							<a style="color:darkorange" class="page-link" asp-action="index" asp-controller="dashboard" asp-route-page="@(Model.Page-1)" aria-label="Previous">
								<span aria-hidden="true">&laquo;</span>
							</a>
						}

						@for (int i = 1; i <= Model.TotalPage; i++)
						{
								<a style="color:red" class="page-link @(Model.Page==i?"active":"")" asp-action="index" asp-controller="dashboard" asp-route-page="@i">@i</a>
						}


						@if (Model.HasNext)
						{
								<a style="color:darkorange" class="page-link" asp-action="index" asp-controller="dashboard" asp-route-page="@(Model.Page+1)" aria-label="Next">
								<span aria-hidden="true">&raquo;</span>
							</a>
						}

				</ul>
			</nav>
		</form>
	</div>
		</div>
	</div>

</main> <!-- Main Area -->